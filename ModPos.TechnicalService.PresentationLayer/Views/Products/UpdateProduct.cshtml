@model UpdateProductDto
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-title">
	<h4>Ürün Güncelleme Sayfası</h4>
</div>
<div class="card-body">
	<div class="form-validation">
		<form class="form-valide" method="post">
			<div class="form-group row">
				<input type="hidden" asp-for="ProductId" />
				<label class="col-lg-4 col-form-label" for="val-email">
					Ürün Kodu
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="ProductCode" placeholder="Ürün kodu giriniz..">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Kategori
				</label>
				<div class="col-lg-6">
					<select class="form-control" id="CategoryIdSelect" name="CategoryId"></select>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Adı
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="ProductName" placeholder="Ürün adı giriniz..">
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Seri Numarası
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="ProductSerialNumber" placeholder="Ürün seri numarası giriniz..">
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Barkod
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="ProductBarcode" placeholder="Ürün barkod giriniz..">
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Alış Fiyatı
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="PurchasePrice" placeholder="Alış fiyat bilgisi giriniz..">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">
					Ürün Satış Fiyatı
				</label>
				<div class="col-lg-6">
					<input type="text" class="form-control" asp-for="SellingPrice" placeholder="Satış fiyat bilgisi giriniz..">
				</div>
			</div>
			<div class="form-group row">
				<div class="col-lg-8 ml-auto">
					<button class="btn btn-primary">Kaydet</button>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
	$(document).ready(function () {
		$.ajax({
			type: "GET",
			url: "https://localhost:44301/api/Categories/GetAllCategories",
			dataType: "json",
			success: function (categories) {
				
				var selectElement = $("#CategoryIdSelect");
				$.each(categories, function (index, category) {
					selectElement.append($("<option>", {
						value: category.categoryId,
						text: category.categoryName
					}));
				});
			},
			error: function () {
				console.error("Kategoriler alınamadı.");
			}
		});
	});
</script>