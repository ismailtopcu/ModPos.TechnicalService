@model List<ResultServiceMovementsDto>
@{
	ViewData["Title"] = "ServiceMovementsList";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int count = 0;
}

<div class="card-title">
	<h4>Servis Hareketleri</h4>
</div>
<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Servis Kodu</th>
				<th>Ürün Adı</th>
				<th>Ürün Adedi</th>
				<th>Ürün Seri Numarası</th>
				<th>Servis Fiyatı</th>
				<th>Döviz</th>
				<th>Servis Satır Tutarı</th>
				<th>Servis İşlem Tipi</th>
				<th>Sil</th>
				<th>Güncelle</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;
				<tr>
					<th>@count</th>
					<td>@item.Service.ServiceCode </td>
					<td>@item.Product.ProductName</td>
					<td>@item.ProductQuantity</td>
					<td>@item.Product.ProductSerialNumber</td>
					<td>$@item.ServicePrice</td>
					<td>@item.Currency₺</td>
					<td>@item.ServiceLineAmount₺</td>
					<td>@item.ServiceTransactionType</td>
					<td><a href="/ServiceMovements/deleteServiceMovements/@item.ServiceMovementsId" class="btn btn-danger">Sil</a></td>
					<td><a href="/ServiceMovements/updateServiceMovements/@item.ServiceMovementsId?serviceId=@item.Service.ServiceId" class="btn btn-success">Güncelle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/ServiceMovements/CreateServiceMovements?serviceId=@ViewBag.ServiceId" class="btn btn-primary" style="float:left">Servis Hareketi Oluştur</a>
</div>

